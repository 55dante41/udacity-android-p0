<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/main_action_view_spotify_streamer"
        android:textColor="#ffffff"
        android:text="SPOTIFY STREAMER"
        android:background="#f08c35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/main_action_view_superduo_football_scores"
        android:textColor="#ffffff"
        android:text="SUPER DUO: FOOTBALL SCORES"
        android:background="#f08c35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/main_action_view_superduo_library"
        android:textColor="#ffffff"
        android:text="SUPER DUO: LIBRARY"
        android:background="#f08c35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/main_action_view_build_it_bigger"
        android:textColor="#ffffff"
        android:text="BUILD IT BIGGER"
        android:background="#f08c35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/main_action_view_xyz_reader"
        android:textColor="#ffffff"
        android:text="XYZ READER"
        android:background="#f08c35"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/main_action_view_capstone"
        android:textColor="#ffffff"
        android:text="CAPSTONE"
        android:background="#cd0e3e"/>

</LinearLayout>
